<p id="notice"><%= notice %></p>

<h1>Visits</h1>

<table>
  <thead>
    <tr>
      <th>Visitor who:</th>
      <th>From_user_id:</th>
      <th>Visit to:</th>
      <th>To_user_id:</th>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.from_user.fullname %></td>
        <td><%= visit.from_user.id %></td>
        <td><%= visit.to_user.fullname %></td>
        <td><%= visit.to_user.id %></td>
        <td><%= visit.problem %></td>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

